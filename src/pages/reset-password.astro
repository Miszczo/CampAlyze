---
import Layout from "../layouts/Layout.astro";
import { ResetPasswordForm } from "../components/auth/ResetPasswordForm";

// Note: The actual access token is handled via cookies by @supabase/ssr
// when the user clicks the link and lands on this page.
// We don't need to parse it from the URL fragment manually here.
---

<Layout title="Reset Password | CampAlyze">
  <div class="flex min-h-[calc(100vh-theme(spacing.16))] flex-1 flex-col items-center justify-center p-4">
    <ResetPasswordForm client:load />
  </div>
</Layout>
